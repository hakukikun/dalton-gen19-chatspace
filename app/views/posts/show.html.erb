<div class="contents row">
  <div class="content_post">
    <span class="name">
      <a href="/users/<%= @post.user.id %>">
       <h4> <%= @post.user.nickname %></h4>
      </a>
    </span>
    <font color="#000000">
    <%= @post.text %>
    </font>

  </div>

  <div class="container">
    <% if current_user %>
      <%= form_tag("/posts/#{@post.id}/comments", method: :post) do %>
        <textarea name="text" placeholder="コメントする" rows="2" cols="30"></textarea>
        <input type="submit" value="SENT">
    <% end %>
    <% end %>

    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>:</strong>
            <font color="#000000">
            <%= comment.text %>
            </font>
          </p>
          <p><font color="#aaaaaa"> 
            posted: <%= @post.created_at.to_s(:datetime_jp) %>
            (updated: <%= @post.updated_at.to_s(:datetime_jp) %>)
          </font></p>

          <% if user_signed_in? %>
            <%= @post.like_count %>
            <%= link_to '編集', "/posts/#{@post.id}/comments/#{comment.id}/edit", method: :get %>
            <%= link_to '削除', "/posts/#{@post.id}/comments/#{comment.id}", method: :delete %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
