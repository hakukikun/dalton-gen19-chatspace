<div class="contents row">
  <%= form_tag("/posts/#{@post.id}", method: :patch) do %>
    <h4>
      編集する
    </h4>

    <p><font color="#000000">
    <%= @post.text %>
    </font></p>

    <textarea name="text" placeholder="text" rows="10" cols="30",autofocus:"true"></textarea>
    <input type="submit" value="投稿する">
    
  <% end %>
</div>